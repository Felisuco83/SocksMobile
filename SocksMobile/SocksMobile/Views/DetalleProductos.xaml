<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocksMobile.Views.DetalleProductos">
    <ContentPage.Content>
        <StackLayout>
        <Image  Source="{Binding Product.image}" Aspect="Fill" HorizontalOptions="Center" VerticalOptions="Start"/>
            <Label Text="{Binding Product.Ca}" TextColor="Black" FontSize="16" HorizontalOptions="Center"/>
            <Label Text="{Binding Product.Subcategory_name}" TextColor="Black" FontSize="16" HorizontalOptions="Center"/>
            <Label Text="{Binding Product.Product_style}" TextColor="Black" FontSize="16" HorizontalOptions="Center"/>
            <Label Text="{Binding Product.Product_name}" TextColor="Black" FontSize="16" HorizontalOptions="Center"/>
            <Label Text="{Binding Product.Product_print}" TextColor="Gray" FontSize="14" HorizontalOptions="Center"/>
            <Label Text="{Binding Product.Product_price, StringFormat='{0} $'}" HorizontalOptions="Center" TextColor="#f05366" FontSize="14"/>
            <Label Text="{Binding Product.Product_description}" TextColor="Black" FontSize="16" HorizontalOptions="FillAndExpand" Margin="5,5,0,0"/>
        </StackLayout>
    </ContentPage.Content>
